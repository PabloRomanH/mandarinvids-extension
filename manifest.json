{
  "manifest_version": 2,

  "name": "Mandarinvids.com extension",
  "description": "This extension allows anyone to submit content to mandarinvids.com",
  "version": "1.0",

  "browser_action": {
    "default_icon": {
      "19": "icon19.png",
      "38": "icon38.png"
    },
    "default_popup": "popup.html",
    "default_title": "click to submit video in current page"
  },
  "permissions": [
    "activeTab",
    "https://docs.google.com/",
    "http://www.iqiyi.com/",
    "http://video.sina.com.cn/",
    "http://tv.sohu.com/"
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
